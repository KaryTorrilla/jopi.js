{
  "name": "root",
  "private": false,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "lerna exec --parallel -- babel --root-mode upward src -d lib --ignore **/*.stories.js,**/*.spec.js",
    "coverage": "jest --coverage",
    "deploy-storybook": "storybook-to-ghpages",
    "dev": "start-storybook -p 5555",
    "lint:js": "eslint . --ext .js --ignore-pattern lib --ignore-pattern node_modules",
    "lint:styles": "stylelint './packages/**/src/*.js'",
    "lint": "yarn lint:js && yarn lint:styles",
    "prettier": "prettier --write \"**/*.{js,json,md,yml}\"",
    "lerna-publish": "lerna publish",
    "test": "yarn build && yarn lint && yarn coverage",
    "unit": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-docs": "^5.2.0-beta.23",
    "@storybook/addon-info": "^5.2.0-beta.23",
    "@storybook/react": "^5.2.0-beta.23",
    "@storybook/storybook-deployer": "^2.8.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-styled-components": "^1.10.6",
    "eslint": "4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jest": "^21.27.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "jest-haste-map": "^24.8.1",
    "jest-resolve": "^24.8.0",
    "jest-styled-components": "^6.3.3",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6",
    "styled-components": "^4.3.2",
    "stylelint": "10.1.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.8.0",
    "webpack": "^4.39.1"
  }
}